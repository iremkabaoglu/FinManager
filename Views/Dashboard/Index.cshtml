@{
    ViewData["Title"] = "Dashboard";
    var dailyLabels = (string[])(ViewBag.DailyLabels ?? Array.Empty<string>());
    var dailyTotals = (decimal[])(ViewBag.DailyTotals ?? Array.Empty<decimal>());
    var pieLabels = (string[])(ViewBag.PieLabels ?? Array.Empty<string>());
    var pieTotals = (decimal[])(ViewBag.PieTotals ?? Array.Empty<decimal>());
}

<div class="row g-3">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="small text-muted">Income (last 30 days)</div>
                <div class="fs-3 fw-semibold">@ViewBag.Income.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="small text-muted">Expense (last 30 days)</div>
                <div class="fs-3 fw-semibold">@ViewBag.Expense.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="small text-muted">Net</div>
                <div class="fs-3 fw-semibold">@ViewBag.Net.ToString("C")</div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4 g-3">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Daily Balance (last 30 days)</h5>
                @if (dailyLabels.Length == 0)
                {
                    <div class="text-muted">No data yet. Add some transactions.</div>
                }
                else
                {
                    <canvas id="lineChart"></canvas>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Expenses by Category</h5>
                @if (pieLabels.Length == 0)
                {
                    <div class="text-muted">No expense data yet.</div>
                }
                else
                {
                    <canvas id="pieChart"></canvas>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const dailyLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(dailyLabels));
        const dailyTotals = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(dailyTotals));
        const pieLabels   = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(pieLabels));
        const pieTotals   = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(pieTotals));

        if (dailyLabels.length) {
            new Chart(document.getElementById('lineChart'), {
                type: 'line',
                data: {
                    labels: dailyLabels,
                    datasets: [{
                        label: 'Net Balance',
                        data: dailyTotals,
                        tension: 0.2,
                        fill: true
                    }]
                }
            });
        }

        if (pieLabels.length) {
            new Chart(document.getElementById('pieChart'), {
                type: 'pie',
                data: {
                    labels: pieLabels,
                    datasets: [{
                        data: pieTotals
                    }]
                }
            });
        }
    </script>
}
